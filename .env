# ──────────────────────────────────────────────
# IntelligenceLayer — Production Environment
# RunPod RTX A6000 (48GB) Configuration
# ──────────────────────────────────────────────

# ── Logging ──────────────────────────────────
LOGURU_LEVEL=INFO

# ── GPU / Rendering (NVIDIA official Dockerfile) ──
MUJOCO_GL=egl
PYOPENGL_PLATFORM=egl
CUBLAS_WORKSPACE_CONFIG=:4096:8
NVIDIA_DRIVER_CAPABILITIES=graphics,utility,compute

# ── Flash Attention ──────────────────────────
FLASH_ATTENTION_DETERMINISTIC=0

# ── Library Tweaks ───────────────────────────
TOKENIZERS_PARALLELISM=false
XLA_PYTHON_CLIENT_PREALLOCATE=false

# ── Distributed Training (NCCL) ─────────────
NCCL_DEBUG=WARN
NCCL_P2P_DISABLE=0

# ── Memory optimization for RTX A6000 (48GB) ──
PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# ── SimplerEnv / ManiSkill2 ──────────────────
MS2_SIM_LOG_LEVEL=error
MS2_RENDERER_LOG_LEVEL=warn
